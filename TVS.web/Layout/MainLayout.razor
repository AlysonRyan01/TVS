@using TVS.web.Themes
@inherits LayoutComponentBase

<MudThemeProvider Theme="@MudThemes.MyThemes"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<header>
    <section class="flex flex-col border-b">
        <div class="flex flex-row w-[85%] self-center h-fit justify-between pt-5 pb-5 sm:w-[80%] lg:w-[70%]">
            <MudLink Href="/" Class="inline-block">
                <img class="h-[38px] md:h-[40px] lg:h-[60px]" src="/img/tvs-logo.PNG" alt="foto tvs logo"/>
            </MudLink>
            <img @onclick="OpenDrawer" src="/img/menu.png" alt="menu" class="h-[38px] lg:hidden"/>
            <div class="hidden lg:flex flex-row items-center gap-8">
                <MudLink Class="text-lg font-sans font-semibold" Href="/" Color="Color.Tertiary" Underline="Underline.Hover">Home</MudLink>
                <MudLink Class="text-lg font-sans font-semibold" Href="/contato" Color="Color.Tertiary" Underline="Underline.Hover">Contato</MudLink>
                <MudLink Class="text-lg font-sans font-semibold" Href="/consultar" Color="Color.Tertiary" Underline="Underline.Hover">Consultar OS</MudLink>
                <MudButton Class="text-lg font-sans font-semibold" Size="Size.Large" Href="/orcamento" Variant="Variant.Outlined" Color="Color.Primary">Solicitar Orçamento</MudButton>
            </div>
        </div>
    </section>
</header>

<main>
    @Body

    <MudDrawer Style="overflow:hidden; position:fixed;" @bind-Open="@_open" Width="70vw" Height="100vh" Anchor="Anchor.Left" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Class="flex flex-col gap-5 mb-12 bg-roxo">
            <img src="/img/tvs-logo.PNG" class="w-[60%]" alt="imagem logo tvs"/>
        </MudDrawerHeader>
        <MudNavMenu Class="flex flex-col">
            <div class="flex flex-col pl-3 gap-5">
                <MudLink OnClick="CloseDrawer" Class="text-base font-sans font-semibold" Href="/" Color="Color.Tertiary" Underline="Underline.Hover">Home</MudLink>
                <MudLink OnClick="CloseDrawer" Class="text-base font-sans font-semibold" Href="/contato" Color="Color.Tertiary" Underline="Underline.Hover">Contato</MudLink>
                <MudLink OnClick="CloseDrawer" Class="text-base font-sans font-semibold" Href="/consulta" Color="Color.Tertiary" Underline="Underline.Hover">Consultar Orçamento</MudLink>
                <MudButton OnClick="CloseDrawer" Class="text-sm font-sans font-semibold w-fit" FullWidth="false" Size="Size.Large" Href="/orcamento" Variant="Variant.Outlined" Color="Color.Primary">Solicitar Orçamento</MudButton>
            </div>
        </MudNavMenu>

    </MudDrawer>
</main>

<footer>
    <section class="flex flex-col sm:flex-row w-[100%] items-center sm:justify-center bg-[#750303] border-t">
        <div class="flex flex-col sm:flex-row sm:justify-evenly w-full sm:w-[80%] items-center p-[30px]">
            <img src="/img/TVS-LOGO-BRANCO.PNG" class="w-[50%] md:w-[50%] lg:w-[20%]" alt="TVS logo"/>
            <div class="flex flex-col w-[100%] items-center mt-4 sm:hidden">
                <div style="border-bottom: 0.5px solid #BE0405; border-top: 0.5px solid #BE0405;" class="flex flex-col w-full items-center">
                    <MudLink Class="text-lg font-sans font-semibold p-3" Href="/" Color="Color.Secondary" Underline="Underline.Hover">Home</MudLink>
                </div>
                <div style="border-bottom: 0.5px solid #BE0405" class="flex flex-col w-full items-center">
                    <MudLink Class="text-lg font-sans font-semibold p-3" Href="/contato" Color="Color.Secondary" Underline="Underline.Hover">Contato</MudLink>
                </div>
                <div style="border-bottom: 0.5px solid #BE0405" class="flex flex-col w-full items-center">
                    <MudLink Class="text-lg font-sans font-semibold p-3" Href="/orcamento" Color="Color.Secondary" Underline="Underline.Hover">Solicitar Orçamento</MudLink>
                </div>
                <div style="border-bottom: 0.5px solid #BE0405" class="flex flex-col w-full items-center">
                    <MudLink Class="text-lg font-sans font-semibold p-3" Href="/consulta" Color="Color.Secondary" Underline="Underline.Hover">Consultar Orçamento</MudLink>
                </div>
            </div>
            <div class="hidden sm:flex sm:flex-col items-start mt-4 gap-4">
                <div class="flex flex-col items-center">
                    <MudLink Class="text-lg font-sans font-semibold" Href="/" Color="Color.Secondary" Underline="Underline.Hover">Home</MudLink>
                </div>
                <div class="flex flex-col items-center">
                    <MudLink Class="text-lg font-sans font-semibold" Href="/contato" Color="Color.Secondary" Underline="Underline.Hover">Contato</MudLink>
                </div>
                <div class="flex flex-col items-center">
                    <MudLink Class="text-lg font-sans font-semibold" Href="/orcamento" Color="Color.Secondary" Underline="Underline.Hover">Solicitar Orçamento</MudLink>
                </div>
                <div class="flex flex-col items-center">
                    <MudLink Class="text-lg font-sans font-semibold" Href="/consulta" Color="Color.Secondary" Underline="Underline.Hover">Consultar Orçamento</MudLink>
                </div>
            </div>
            <div class="flex flex-col items-center text-center">
                <p class="font-sans font-medium text-base text-primary m-0 p-8">2025 - Direitos reservados</p>
                <img src="/img/seguranca.png" class="w-[70px] sm:w-[100px]"/>
            </div>
        </div>
    </section>
</footer>

@code
{
    private bool _open;
    bool _contato;
    
    private void OpenDrawer()
    {
        _open = true;
    }
    
    private void CloseDrawer()
    {
        _open = false;
    }
    
    private void AbrirContato() {
        _contato = !_contato;
    }
}

