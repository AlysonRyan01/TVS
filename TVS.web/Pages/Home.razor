@page "/"

<section class="flex flex-col">
    <div class="flex flex-row w-[85%] self-center h-fit justify-between pt-5 pb-5 sm:w-[80%] lg:w-[80%]">
        <img class="h-[38px] md:h-[70px]" src="/img/tvs-logo.PNG" alt="foto tvs logo"/>
        <img @onclick="OpenDrawer" src="/img/menu.png" alt="menu" class="h-[38px] md:hidden"/>
