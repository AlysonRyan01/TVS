@page "/orcamento"

<section class="flex flex-col w-full items-center bg-[#750303] min-h-[700px] m-0 p-0">
    <div class="flex flex-col lg:flex-row w-[85%] lg:w-[70%] gap-3 items-center lg:items-start lg:justify-center lg:gap-12 mt-[50px] lg:mt-[100px] mb-[50px] lg:mb-[100px]">
        <div class="flex flex-col w-full lg:w-[45%] lg:max-w-[45%] gap-5">
            <h1 class="text-5xl font-titillium font-extrabold text-primary mb-[30px]">
                Solicite seu or√ßamento sem compromisso!
            </h1>
            <div class="flex flex-row gap-3 items-center">
                <img src="/img/orcamento.png" alt="√çcone de e-mail"/>
                <p class="text-xl text-primary font-sans font-bold">
                    Or√ßamento r√°pido, gratuito e sem compromisso!
                </p>
            </div>
            <p class="text-base text-primary font-sans font-semibold">
                Sua TV apresentou defeito? Estamos aqui para ajudar! Preencha os campos abaixo e nossa equipe entrar√° em contato via e-mail ou WhatsApp com uma solu√ß√£o personalizada.
            </p>
            <p class="text-base text-primary font-sans font-bold">
                Nossa miss√£o √© oferecer um atendimento √°gil e eficiente, esclarecendo todas as suas d√∫vidas e proporcionando a melhor experi√™ncia poss√≠vel. üöÄ
            </p>
        </div>
        <div class="flex flex-col w-full lg:w-[45%] lg:max-w-[45%] gap-3 items-center">
            <form class="flex flex-col items-center lg:items-start w-full gap-4" @onsubmit="SendForm">
                <!-- Nome -->
                <div class="flex flex-col w-full">
                    <label class="block text-sm font-medium text-primary mb-1" for="name">Nome</label>
                    <input id="name" type="text" @bind="Contact.Name" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FFFFFF] focus:border-[#FFFFFF] transition"/>
                </div>

                <!-- Telefone -->
                <div class="flex flex-col w-full">
                    <label class="block text-sm font-medium text-primary mb-1" for="phone">Telefone</label>
                    <input id="phone" type="tel" @bind="Contact.Phone" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FFFFFF] focus:border-[#FFFFFF] transition"/>
                </div>

                <!-- Email -->
                <div class="flex flex-col w-full">
                    <label class="block text-sm font-medium text-primary mb-1" for="email">Email</label>
                    <input id="email" type="email" @bind="Contact.Email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FFFFFF] focus:border-[#FFFFFF] transition"/>
                </div>

                <!-- Mensagem -->
                <div class="flex flex-col w-full mb-5">
                    <label class="block text-sm font-medium text-primary mb-1" for="message">Descri√ß√£o Detalhada do Defeito</label>
                    <textarea id="message"
                              @bind="Contact.Message"
                              rows="5"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg resize-y focus:outline-none focus:ring-2 focus:ring-[#FFFFFF] focus:border-[#FFFFFF] transition">
                </textarea>
                </div>

                <MudPaper Class="w-full p-2 mb-4 border border-dashed border-gray-300 rounded-md">
                    <label for="upload-etiqueta" class="flex items-center gap-2 cursor-pointer">
                        <MudIcon Icon="@Icons.Material.Filled.UploadFile" />
                        <MudText>Fotos Da Etiqueta da TV ( Obrigat√≥rio )</MudText>
                    </label>

                    <InputFile id="upload-etiqueta"
                               class="hidden"
                               OnChange="LoadEtiquetaFiles"
                               multiple />

                    @if (_etiquetaFiles.Any())
                    {
                        <ul class="mt-2 text-white text-sm">
                            @foreach (var file in _etiquetaFiles)
                            {
                                <li><p class="font-sans font-normal text-base text-black">@file.Name</p></li>
                            }
                        </ul>
                    }
                </MudPaper>


                <MudPaper Class="w-full p-2 mb-4 border border-dashed border-gray-300 rounded-md">
                    <label for="upload-defeito" class="flex items-center gap-2 cursor-pointer">
                        <MudIcon Icon="@Icons.Material.Filled.UploadFile" />
                        <MudText>Fotos ou V√≠deos do Defeito ( Obrigat√≥rio )</MudText>
                    </label>

                    <InputFile id="upload-defeito"
                               class="hidden"
                               OnChange="LoadDefeitoFiles"
                               multiple />

                    @if (_defeitoFiles.Any())
                    {
                        <ul class="mt-2 text-white text-sm">
                            @foreach (var file in _defeitoFiles)
                            {
                                <li><p class="font-sans font-normal text-base text-black">@file.Name</p></li>
                            }
                        </ul>
                    }
                </MudPaper>

                <!-- Bot√£o -->
                @if (_formIsBusy)
                {
                    <MudProgressCircular Size="Size.Medium" Class="align-self-center" Color="Color.Info" Indeterminate="true" />
                }
                else
                {
                    <button type="submit" disabled="@((_formIsBusy || _isButtonDisabled))"
                            class="w-[50%]  bg-[#a2c7bb] hover:bg-[#92a68a] text-[#750303] text-lg font-semibold py-2 px-5 rounded-lg transition">
                        @(_isButtonDisabled ? $"Aguarde {_buttonCountdown.Minutes:D2}:{_buttonCountdown.Seconds:D2}..." : "Enviar")
                    </button>
                }
            </form>
        </div>
    </div>
</section>